<div class="index masterhead container p-1">
  <div class="row p-1">
    <div class="col-md-12 mx-auto p-1">
      <div class="card">
        <h3 class="text-center p-2">Editar</h3>
        <div class="card-body">
          <form action="/ejercicios/edit_ejercicios/{{ejercicio.id_Ejercicio}}" method="POST"
            enctype="multipart/form-data">
            <div class="form-group mx-auto">
              <h4 class="text-center">Funcion Objetivo.</h4>
              <input type="text" name="func_Obj" value="{{ejercicio.func_Obj}}" readonly="readonly" class="form-control"
                placeholder="FunciÃ³n Objetivo" autofocus>
            </div>
            <div class="form-group">
              <h4 class="text-center">Fecha Inicial</h4>
              <input type="text" name="fecha_Ini" value="{{ejercicio.fecha_Ini}}" readonly="readonly"
                class="form-control" placeholder="Fecha de Inicio del Ejercicio.">
            </div>
            <div class="form-group">
              <h4 class="text-center">Fecha de Entrega</h4>
              <input type="text" name="fecha_Fin" value="{{ejercicio.fecha_Fin}}" readonly="readonly"
                class="form-control" placeholder="Fecha de Entrega del Ejercicio.">
            </div>
            <div class="form-group">
              <textarea name="desc_Ejer" rows="2" class="form-control" readonly="readonly"
                placeholder="Descripcion del ejercicio">{{ejercicio.desc_Ejer}}</textarea>
            </div>
            <input id="fk_Docente" name="fk_Docente" type="hidden" value="1" />
            <div class="form-group"></div>
            <button class="btn btn-success btn-block">
              Actualizar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>